{
  "name": "OpenConceptConsulting-solr",
  "version": "0.1.1",
  "author": "OpenConceptConsulting",
  "summary": "A puppet module for solr",
  "license": "MIT",
  "source": "https://github.com/OpenConceptConsulting/puppet-solr",
  "project_page": "https://github.com/OpenConceptConsulting/puppet-solr",
  "issues_url": "https://github.com/OpenConceptConsulting/puppet-solr/issues",
  "description": "Configure and set up a multi-core solr instance",
  "tags": [
    "solr",
    "apache",
    "jetty"
  ],
  "operatingsystem_support": [
    {
      "operatingsystem": "Debian",
      "operatingsystemrelease": [
        "6.0",
        "7.0"
      ]
    },
    {
      "operatingsystem": "Ubuntu",
      "operatingsystemrelease": [
        "12.04",
        "14.04"
      ]
    }
  ],
  "requirements": [
    {
      "name": "pe",
      "version_requirement": "3.x"
    },
    {
      "name": "puppet",
      "version_requirement": "3.x"
    }
  ],
  "dependencies": [
    {
      "name": "puppetlabs-stdlib",
      "version_range": ">= 4.0.0 < 5.0.0"
    }
  ]
}
